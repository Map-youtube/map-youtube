<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with YouTube Videos and Marker Clustering</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI"></script>
    <script src="https://cdn.jsdelivr.net/npm/papaparse@5.3.0/papaparse.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-marker-clusterer/1.0.0/markerclusterer.min.js"></script>
    <style>
        #map {
            height: 100vh;  /* 전체 화면 높이 설정 */
            width: 100%;
        }
        .info-window {
            width: 500px;  /* 정보 창 너비 */
            height: 300px; /* 정보 창 높이 */
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        // 구글 맵 초기 설정
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 0, lng: 0 },
                zoom: 2  // 전 세계 지도가 보이도록 줌 레벨 설정
            });

            // 마커 배열 및 클러스터링 옵션 설정
            const markers = [];
            const markerCluster = new MarkerClusterer(map, markers, {
                imagePath: "https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m",
            });

            // CSV 파일에서 데이터 불러오기
            Papa.parse("https://raw.githubusercontent.com/Map-youtube/map-youtube/main/location.csv", {
                download: true,
                header: true,
                complete: function(results) {
                    const data = results.data;
                    data.forEach(location => {
                        const lat = parseFloat(location.latitude);
                        const lng = parseFloat(location.longitude);
                        const name = location.Location;
                        const youtubeURL = location['YouTube Link'];

                        // 마커 생성
                        const marker = new google.maps.Marker({
                            position: { lat, lng },
                            title: name
                        });

                        // 유튜브 영상이 포함된 큰 정보창 설정
                        const infoWindow = new google.maps.InfoWindow({
                            content: `
                                <div class="info-window">
                                    <h3>${name}</h3>
                                    <iframe width="100%" height="250" src="${youtubeURL}?autoplay=1&mute=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            `
                        });

                        // 마커 클릭 시 정보창 열기 및 자동 재생 설정
                        marker.addListener("click", () => {
                            infoWindow.open(map, marker);
                        });

                        // 마커 배열에 추가하여 클러스터링 적용
                        markers.push(marker);
                    });

                    // 마커 클러스터링 실행
                    markerCluster.addMarkers(markers);
                }
            });
        }

        // 페이지 로드 시 initMap 실행
        window.onload = initMap;
    </script>
</body>
</html>
