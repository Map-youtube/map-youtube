<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BEFORE YOU GO - uMap</title>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        #map {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: 0;
        }
        
        /* 현재 위치 찾기 버튼 스타일 */
        .location-btn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            z-index: 1000;
        }

        .location-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>

    <!-- 지도 삽입 -->
    <iframe id="osm-map" width="100%" height="100%" frameborder="0" allowfullscreen allow="geolocation"
        src="//umap.openstreetmap.fr/ko/map/untitled-map_1110791?scaleControl=false&miniMap=false&scrollWheelZoom=true&zoomControl=true&editMode=disabled&moreControl=true&searchControl=null&tilelayersControl=true&embedControl=null&datalayersControl=true&onLoadPanel=none&captionBar=false&captionMenus=true&lat=13.7563&lon=100.5018&zoom=5"></iframe>

    <!-- 현재 위치 찾기 버튼 -->
    <button class="location-btn" onclick="setMapToCurrentLocation()">내 위치 찾기</button>

    <script>
        // GPS 위치를 모바일에서 사용하도록 설정하는 함수
        function setMapToCurrentLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    var lat = position.coords.latitude;
                    var lon = position.coords.longitude;

                    // 현재 위치를 기반으로 지도를 갱신합니다.
                    var iframe = document.getElementById('osm-map');
                    iframe.src = `//umap.openstreetmap.fr/ko/map/untitled-map_1110791?scaleControl=false&miniMap=false&scrollWheelZoom=true&zoomControl=true&editMode=disabled&moreControl=true&searchControl=null&tilelayersControl=true&embedControl=null&datalayersControl=true&onLoadPanel=none&captionBar=false&captionMenus=true&lat=${lat}&lon=${lon}&zoom=14`;
                }, function(error) {
                    alert('GPS 정보를 불러오는데 실패했습니다.');
                });
            } else {
                alert('GPS를 사용할 수 없습니다.');
            }
        }
    </script>
</body>
</html>
