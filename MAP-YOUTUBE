<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>여행지 및 식당 안내</title>
    <link rel="stylesheet" href="styles.css"> <!-- CSS 파일 링크 (추가 스타일링을 위해) -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI&callback=initMap" async defer></script>
    <style>
        /* 간단한 스타일링 추가 */
        body {
            font-family: Arial, sans-serif;
        }
        #map {
            height: 500px;
            width: 100%;
        }
        .popup {
            display: none;
            position: absolute;
            background: white;
            border: 1px solid black;
            padding: 10px;
            z-index: 100;
        }
    </style>
</head>
<body>

    <h1>여행지 및 식당 안내</h1>
    <div id="map"></div>
    <div class="popup" id="popup"></div>

    <script>
        let map;
        function initMap() {
            // 맵 초기화
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 37.564213, lng: 127.001698 }, // 서울 중심
                zoom: 10,
            });

            // 마커를 추가할 위치 (여행지 또는 식당)
            const locations = [
                { title: "맛집 A", lat: 37.570000, lng: 127.003000, videoId: "a1BcD2EfGHQ" },
                { title: "여행지 B", lat: 37.580000, lng: 127.010000, videoId: "b2CdEfGhij3" }
            ];

            locations.forEach(location => {
                const marker = new google.maps.Marker({
                    position: { lat: location.lat, lng: location.lng },
                    map: map,
                    title: location.title,
                });

                // 클릭 이벤트 리스너 추가
                marker.addListener("click", () => {
                    showPopup(location.title, location.videoId, marker.getPosition());
                });
            });
        }

        function showPopup(title, videoId, position) {
            const popup = document.getElementById("popup");
            const videoLink = `https://www.youtube.com/embed/${videoId}`;
            popup.innerHTML = `
                <h3>${title}</h3>
                <iframe width="280" height="157" 
                        src="${videoLink}" 
                        frameborder="0" 
                        allowfullscreen></iframe>
            `;
            popup.style.display = 'block';
            popup.style.left = position.lng() + 'px';  // Popup 위치 설정
            popup.style.top = position.lat() + 'px';
        }
    </script>
</body>
</html>
