<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>유튜브와 구글맵 결합 웹사이트</title>
    <style>
        /* 지도 스타일 */
        #map {
            width: 100%;
            height: 600px; /* 파일에서 요구한 높이 */
        }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&libraries=places"></script>
    <script>
        var markers = []; // 마커 배열
        
        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 37.5665, lng: 126.9780 }, // 서울 좌표
                zoom: 10
            });

            // 검색창
            var input = document.getElementById('search-input');
            var searchBox = new google.maps.places.SearchBox(input);

            map.controls[google.maps.ControlPosition.TOP_LEFT].push(input);

            searchBox.addListener('places_changed', function() {
                var places = searchBox.getPlaces();

                if (places.length === 0) {
                    return;
                }

                // 이전 마커 제거
                markers.forEach(function(marker) {
                    marker.setMap(null);
                });
                markers = []; // 배열 초기화

                var bounds = new google.maps.LatLngBounds();
                places.forEach(function(place) {
                    if (!place.geometry) {
                        console.log("Returned place contains no geometry");
                        return;
                    }

                    // 마커 생성
                    var marker = new google.maps.Marker({
                        map: map,
                        position: place.geometry.location
                    });

                    markers.push(marker); // 마커 배열에 저장

                    // 정보창 생성
                    var infowindow = new google.maps.InfoWindow({
                        content: `<div><strong>${place.name}</strong><br>${place.formatted_address}</div>`
                    });

                    // 마커 클릭 시 정보창 열기
                    infowindow.open(map, marker);

                    // 클릭 시 정보창을 마커에 표시
                    marker.addListener('click', function() {
                        infowindow.open(map, marker);
                    });

                    // 정보창 바깥 클릭 시 닫기
                    map.addListener('click', function() {
                        infowindow.close();
                    });

                    // 경계 확장
                    if (place.geometry.viewport) {
                        bounds.union(place.geometry.viewport);
                    } else {
                        bounds.extend(place.geometry.location);
                    }
                });
                map.fitBounds(bounds);
            });
        }
    </script>
</head>
<body onload="initMap()">
    <h1>유튜브와 구글맵 결합 웹사이트</h1>

    <!-- 검색창 -->
    <input id="search-input" class="controls" type="text" placeholder="위치 검색">

    <!-- 구글맵 -->
    <div id="map"></div>

    <script>
        // 추가적인 마커 설정 및 기능
    </script>
</body>
</html>
