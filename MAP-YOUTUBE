<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with YouTube Videos and Marker Clustering</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI"></script>
    <script src="https://unpkg.com/@googlemaps/markerclusterer@2.0.3/dist/index.min.js"></script>
    <style>
        #map {
            height: 100vh;
            width: 100%;
        }
        .info-window {
            width: 500px;
            height: 300px;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        // CSV 파일을 불러와 파싱하는 함수
        function fetchCSV(url) {
            return fetch(url)
                .then(response => response.text())
                .then(data => {
                    const rows = data.trim().split('\n');
                    const parsedData = rows.slice(1).map(row => {
                        const [latitude, longitude, location, youtubeLink] = row.split(',');
                        return {
                            latitude: parseFloat(latitude),
                            longitude: parseFloat(longitude),
                            location: location,
                            youtubeLink: youtubeLink
                        };
                    });
                    return parsedData;
                });
        }

        // 구글 맵 초기 설정
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 0, lng: 0 },
                zoom: 2
            });

            const csvUrl = "https://raw.githubusercontent.com/Map-youtube/map-youtube/main/location.csv";

            fetchCSV(csvUrl)
                .then(data => {
                    const markers = [];

                    data.forEach(entry => {
                        const { latitude, longitude, location, youtubeLink } = entry;

                        // 마커 생성
                        const marker = new google.maps.Marker({
                            position: { lat: latitude, lng: longitude },
                            title: location,
                        });

                        // 유튜브 영상이 포함된 큰 정보창 설정
                        const infoWindow = new google.maps.InfoWindow({
                            content: `
                                <div class="info-window">
                                    <h3>${location}</h3>
                                    <iframe width="100%" height="250" src="${youtubeLink}?autoplay=1&mute=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            `
                        });

                        marker.addListener("click", () => {
                            infoWindow.open(map, marker);
                        });

                        markers.push(marker);
                    });

                    // 클러스터링 설정
                    new MarkerClusterer(map, markers);
                })
                .catch(error => console.error("Error fetching CSV data:", error));
        }

        // 페이지 로드 시 initMap 실행
        window.onload = initMap;
    </script>
</body>
</html>
