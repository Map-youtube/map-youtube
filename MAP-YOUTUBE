<body>

    <h1>여행지 및 식당 안내</h1>
    <button id="locationButton">현재 위치 보기</button>
    <div id="map"></div>

    <!-- 검색창 -->
    <input id="pac-input" class="controls" type="text" placeholder="장소 검색">

    <script>
        let map;

function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: 12.7882166, lng: 101.135258 },
        zoom: 10,
    });

    // 지도의 기본 마커 클릭 시 해당 위치로 지도 중심 이동
    map.addListener('click', (event) => {
    // 현재 열려 있는 infowindow가 있으면 닫기
    if (infowindow) {
        infowindow.close();
    }

    // 클릭한 곳이 POI 마커일 때만 실행
    if (event.placeId) { 
        event.stop(); // 기본 동작(예: 장소 정보 표시) 막기
        map.panTo(event.latLng); // 클릭한 POI의 위치로 지도 중심 이동
        }
    });

    const locations = [
        { title: "맛잇다식당", lat: 12.7874027, lng: 101.135227 }
    ];

    locations.forEach(location => {
        const marker = new google.maps.Marker({
            position: { lat: location.lat, lng: location.lng },
            map: null, // 초기에는 맵에 표시하지 않음
            title: location.title,
        });

        marker.addListener("click", () => {
            map.panTo(marker.getPosition());
            map.setZoom(16); // 마커 클릭 시 확대
        });

        // 줌 레벨에 따라 마커 표시
        map.addListener('zoom_changed', () => {
            const zoom = map.getZoom();
            marker.setMap(zoom >= 16 ? map : null); // 줌 레벨이 16 이상일 때만 보이도록 설정
        });
    });

            initAutocomplete();
        }

        function initAutocomplete() {
    const input = document.getElementById('pac-input');
    const autocomplete = new google.maps.places.Autocomplete(input);
    const infowindow = new google.maps.InfoWindow(); // 정보 창 객체 생성

    // 검색 결과를 선택하면 해당 위치로 지도를 이동
    autocomplete.addListener('place_changed', () => {
        const place = autocomplete.getPlace();

        if (!place.geometry || !place.geometry.location) {
            alert("검색된 장소의 위치를 찾을 수 없습니다.");
            return;
        }

        // 검색된 위치로 지도를 이동하고 줌 레벨 설정
        map.setCenter(place.geometry.location);
        map.setZoom(15); // 적절한 줌 레벨로 설정

        // 검색된 장소에 마커 추가
        const marker = new google.maps.Marker({
            map: map,
            position: place.geometry.location
        });

        // 정보 창에 장소 이름 및 정보를 설정
        infowindow.setContent(`<div><strong>${place.name}</strong><br>${place.formatted_address}</div>`);
        
        // 마커에 정보 창을 열기
        infowindow.open(map, marker);
    });
}

        let userMarker, userCircle, watchId, isTracking = false, firstClick = true;

        function trackUserLocation() {
            if (navigator.geolocation) {
                watchId = navigator.geolocation.watchPosition(position => {
                    const pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude,
                        heading: position.coords.heading || 0
                    };
                    updateUserMarker(pos);

                    if (isTracking) {
                        if (firstClick) {
                            map.setCenter(pos);
                            map.setZoom(16);
                            firstClick = false;
                        } else {
                            map.setCenter(pos);
                        }
                        isTracking = false;
                    }

                }, () => {
                    alert("위치 정보를 가져올 수 없습니다.");
                }, {
                    enableHighAccuracy: true,
                    maximumAge: 0,
                    timeout: 5000
                });
            } else {
                alert("브라우저가 위치 서비스를 지원하지 않습니다.");
            }
        }

        function updateUserMarker(position) {
            if (!userMarker) {
                userMarker = new google.maps.Marker({
                    position: { lat: position.lat, lng: position.lng },
                    map: map,
                    title: "현재 위치",
                    icon: {
                        path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
                        scale: 5,
                        rotation: position.heading,
                        fillColor: "blue",
                        fillOpacity: 1,
                        strokeWeight: 2
                    }
                });

                userCircle = new google.maps.Circle({
                    center: { lat: position.lat, lng: position.lng },
                    radius: 50,
                    map: map,
                    fillColor: '#ADD8E6',
                    fillOpacity: 0.3,
                    strokeColor: '#1E90FF',
                    strokeOpacity: 0.8,
                    strokeWeight: 2
                });
            } else {
                userMarker.setPosition({ lat: position.lat, lng: position.lng });
                userMarker.setIcon({
                    path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
                    scale: 5,
                    rotation: position.heading,
                    fillColor: "blue",
                    fillOpacity: 1,
                    strokeWeight: 2
                });

                userCircle.setCenter({ lat: position.lat, lng: position.lng });
            }
        }

        document.getElementById("locationButton").addEventListener("click", function() {
            if (isTracking) {
                return;
            }
            isTracking = true;
            firstClick = true;
            trackUserLocation();
        });
    </script>
</body>
</html>
