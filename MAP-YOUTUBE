<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with YouTube Videos</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI"></script>
    <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@googlemaps/markerclusterer/dist/index.min.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }
        #map {
            height: 70vh;
            width: 100%;
            margin-top: 10vh;
        }
        .info-window {
            width: 500px;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        // 구글 맵 초기 설정
        let currentInfoWindow;

        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 15, lng: 150 },
                zoom: 3,
            });

            const markers = [];

            // XLSX 파일에서 데이터 불러오기
            fetch("YOUR_FILE_PATH.xlsx")
                .then(response => response.arrayBuffer())
                .then(data => {
                    const workbook = XLSX.read(data, { type: "array" });
                    const sheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(sheet, { header: 1 });

                    // 열 이름 추출 (첫 번째 행을 기준으로)
                    const [headers, ...rows] = jsonData;

                    // 각 행마다 필요한 데이터 추출
                    rows.forEach(row => {
                        const lat = parseFloat(row[headers.indexOf("latitude")]);
                        const lng = parseFloat(row[headers.indexOf("longitude")]);
                        const name = row[headers.indexOf("location")];
                        const videoID = row[headers.indexOf("YouTube Link")];

                        // latitude와 longitude가 0인 경우 마커를 표시하지 않음
                        if (lat === 0 && lng === 0) return;

                        // 유튜브 embed URL 생성
                        const embedURL = `https://www.youtube.com/embed/${videoID}?rel=0&showinfo=0&autoplay=1&mute=1`;

                        // 마커 생성
                        const marker = new google.maps.Marker({
                            position: { lat, lng },
                            map,
                            title: name
                        });

                        // 정보창 설정
                        const infoWindow = new google.maps.InfoWindow({
                            content: `
                                <div class="info-window">
                                    <h3>${name}</h3>
                                    <iframe width="100%" height="300" src="${embedURL}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            `
                        });

                        // 마커 클릭 시 기존 정보창 닫고 새 정보창 열기
                        marker.addListener("click", () => {
                            if (currentInfoWindow) {
                                currentInfoWindow.close();
                            }
                            infoWindow.open(map, marker);
                            currentInfoWindow = infoWindow;
                        });

                        // 마커 배열에 추가
                        markers.push(marker);
                    });

                    // 마커 클러스터 생성
                    new markerClusterer.MarkerClusterer({ map, markers });
                });
        }

        // 페이지 로드 시 initMap 실행
        window.onload = initMap;
    </script>
</body>
</html>
