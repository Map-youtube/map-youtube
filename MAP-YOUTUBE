<body>

    <h1>여행지 및 식당 안내</h1>
    <button id="locationButton">현재 위치 보기</button>
    <div id="map"></div>

    <!-- 검색창 -->
    <input id="pac-input" class="controls" type="text" placeholder="장소 검색">

    <script>
        let map, infowindow; // infowindow를 전역 변수로 선언
        let markers = []; // 마커들을 저장할 배열

function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
        center: { lat: 12.7882166, lng: 101.135258 },
        zoom: 10,
    });

    infowindow = new google.maps.InfoWindow(); // 전역 변수로 설정

    // 지도의 빈 곳을 클릭하면 정보 창 닫기
    map.addListener('click', (event) => {
        infowindow.close();
    });

    // 지도를 클릭할 때마다 장소 정보 요청
    map.addListener('click', (event) => {
        const latLng = event.latLng;
        const service = new google.maps.places.PlacesService(map);
        const request = {
            location: latLng,
            radius: '50', // 50미터 이내의 장소 검색
            types: ['establishment'] // 'establishment' 타입의 장소 검색
        };

        service.nearbySearch(request, (results, status) => {
            if (status === google.maps.places.PlacesServiceStatus.OK) {
                const place = results[0]; // 가장 가까운 장소 선택
                if (place) {
                    infowindow.setContent(`
                        <div>
                            <strong>${place.name}</strong><br>
                            ${place.vicinity || '위치 정보 없음'}<br>
                            전화번호: ${place.formatted_phone_number || '정보 없음'}<br>
                            <a href="${place.website}" target="_blank">웹사이트 방문하기</a><br>
                            운영 시간: ${place.opening_hours ? place.opening_hours.weekday_text.join(', ') : '정보 없음'}<br>
                            ${place.photos ? `<img src="${place.photos[0].getUrl({maxWidth: 100})}" alt="${place.name}" style="width: 100px;">` : ''}
                        </div>
                    `);
                    infowindow.setPosition(latLng); // 정보 창 위치 설정
                    infowindow.open(map); // 정보 창 열기
                }
            } else {
                infowindow.setContent('해당 위치에서 장소를 찾을 수 없습니다.');
                infowindow.setPosition(latLng); // 정보 창 위치 설정
                infowindow.open(map); // 정보 창 열기
            }
        });
    });

    initAutocomplete();
}

        function initAutocomplete() {
            const input = document.getElementById('pac-input');
            const autocomplete = new google.maps.places.Autocomplete(input);

            // 검색 결과를 선택하면 해당 위치로 지도를 이동
            autocomplete.addListener('place_changed', () => {
                const place = autocomplete.getPlace();

                if (!place.geometry || !place.geometry.location) {
                    alert("검색된 장소의 위치를 찾을 수 없습니다.");
                    return;
                }

                // 검색된 위치로 지도를 이동하고 줌 레벨 설정
                map.setCenter(place.geometry.location);
                map.setZoom(15); // 적절한 줌 레벨로 설정

                // 검색된 장소에 마커 추가
                const marker = new google.maps.Marker({
                    map: map,
                    position: place.geometry.location
                });

                // 정보 창에 장소 이름 및 정보를 설정
                infowindow.setContent(`
    <div>
        <strong>${place.name}</strong><br>
        ${place.formatted_address}<br>
        전화번호: ${place.formatted_phone_number || '정보 없음'}<br>
        <a href="${place.website}" target="_blank">웹사이트 방문하기</a><br>
        운영 시간: ${place.opening_hours ? place.opening_hours.weekday_text.join(', ') : '정보 없음'}<br>
        ${place.photos ? `<img src="${place.photos[0].getUrl({maxWidth: 100})}" alt="${place.name}" style="width: 100px;">` : ''}
    </div>
`);

                
                // 마커에 정보 창을 열기
                infowindow.open(map, marker);

                // 클릭 시 정보 창 닫기
                marker.addListener('click', () => {
                    infowindow.open(map, marker);
                });

                // 지도의 빈 곳을 클릭하면 정보 창 닫기
                map.addListener('click', () => {
                    infowindow.close();
                });
            });
        }

        let userMarker, userCircle, watchId, isTracking = false, firstClick = true;

        function trackUserLocation() {
            if (navigator.geolocation) {
                watchId = navigator.geolocation.watchPosition(position => {
                    const pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude,
                        heading: position.coords.heading || 0
                    };
                    updateUserMarker(pos);

                    if (isTracking) {
                        if (firstClick) {
                            map.setCenter(pos);
                            map.setZoom(16);
                            firstClick = false;
                        } else {
                            map.setCenter(pos);
                        }
                        isTracking = false;
                    }

                }, () => {
                    alert("위치 정보를 가져올 수 없습니다.");
                }, {
                    enableHighAccuracy: true,
                    maximumAge: 0,
                    timeout: 5000
                });
            } else {
                alert("브라우저가 위치 서비스를 지원하지 않습니다.");
            }
        }

        function updateUserMarker(position) {
            if (!userMarker) {
                userMarker = new google.maps.Marker({
                    position: { lat: position.lat, lng: position.lng },
                    map: map,
                    title: "현재 위치",
                    icon: {
                        path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
                        scale: 5,
                        rotation: position.heading,
                        fillColor: "blue",
                        fillOpacity: 1,
                        strokeWeight: 2
                    }
                });

                userCircle = new google.maps.Circle({
                    center: { lat: position.lat, lng: position.lng },
                    radius: 50,
                    map: map,
                    fillColor: '#ADD8E6',
                    fillOpacity: 0.3,
                    strokeColor: '#1E90FF',
                    strokeOpacity: 0.8,
                    strokeWeight: 2
                });
            } else {
                userMarker.setPosition({ lat: position.lat, lng: position.lng });
                userMarker.setIcon({
                    path: google.maps.SymbolPath.FORWARD_CLOSED_ARROW,
                    scale: 5,
                    rotation: position.heading,
                    fillColor: "blue",
                    fillOpacity: 1,
                    strokeWeight: 2
                });

                userCircle.setCenter({ lat: position.lat, lng: position.lng });
            }
        }

        document.getElementById("locationButton").addEventListener("click", function() {
            if (isTracking) {
                return;
            }
            isTracking = true;
            firstClick = true;
            trackUserLocation();
        });
    </script>
</body>
</html>
