<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with YouTube Videos</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI"></script>
    <script src="https://cdn.jsdelivr.net/npm/papaparse@5.3.0/papaparse.min.js"></script>
    <script src="https://unpkg.com/@googlemaps/markerclustererplus/dist/markerclusterer.min.js"></script>
    <style>
        #map {
            height: 100vh;
            width: 100%;
        }
        .info-window {
            width: 500px; /* doubled from 250px */
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        // 구글 맵 초기 설정
        let currentInfoWindow;  // 현재 열려 있는 정보창을 저장할 변수

        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 0, lng: 0 },
                zoom: 2,  // 전 세계 지도가 보이도록 줌 레벨 설정
            });

            // CSV 파일에서 데이터 불러오기
            Papa.parse("https://raw.githubusercontent.com/Map-youtube/map-youtube/main/location.csv", {
                download: true,
                header: true,
                complete: function(results) {
                    const data = results.data;
                    const markers = []; // 마커를 저장할 배열

                    data.forEach(location => {
                        const lat = parseFloat(location.latitude);
                        const lng = parseFloat(location.longitude);
                        const name = location.Location;
                        const videoID = location['YouTube Link'];  // CSV에 저장된 영상 ID만 가져옴

                        // 유튜브 embed URL 생성
                        const embedURL = `https://www.youtube.com/embed/${videoID}?autoplay=1&mute=1`;

                        // 마커 생성
                        const marker = new google.maps.Marker({
                            position: { lat, lng },
                            map,
                            title: name
                        });

                        // 유튜브 영상이 포함된 정보창 설정
                        const infoWindow = new google.maps.InfoWindow({
                            content: `
                                <div class="info-window">
                                    <h3>${name}</h3>
                                    <iframe width="100%" height="300" src="${embedURL}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            `
                        });

                        // 마커 클릭 시 기존 정보창 닫고 새 정보창 열기
                        marker.addListener("click", () => {
                            // 현재 열려 있는 정보창이 있으면 닫기
                            if (currentInfoWindow) {
                                currentInfoWindow.close();
                            }
                            // 새 정보창 열기
                            infoWindow.open(map, marker);
                            // 현재 열려 있는 정보창 업데이트
                            currentInfoWindow = infoWindow;
                        });

                        // 마커를 배열에 추가
                        markers.push(marker);
                    });

                    // MarkerClusterer 생성
                    const markerCluster = new MarkerClusterer(map, markers, {
                        imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m', // 클러스터 아이콘 경로
                    });
                }
            });
        }

        // 페이지 로드 시 initMap 실행
        window.onload = initMap;
    </script>
</body>
</html>
