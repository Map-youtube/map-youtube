<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with YouTube Videos and Marker Clustering</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI"></script>
    <script src="https://unpkg.com/@googlemaps/markerclusterer@2.0.3/dist/index.min.js"></script>
    <style>
        #map {
            height: 100vh;
            width: 100%;
        }
        .info-window {
            width: 500px;
            height: 300px;
        }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        // 구글 맵 초기 설정
        function initMap() {
            const map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 0, lng: 0 },
                zoom: 2
            });

            const sheetID = "1qQ48k2LjLal5e8H4a6LgjtmfnPNWxkiaw_hYtIJrWxo";  // 구글 시트 ID
            const url = `https://spreadsheets.google.com/feeds/list/${sheetID}/1/public/values?alt=json`;  // URL 수정 완료

            fetch(url)
                .then(response => response.json())
                .then(data => {
                    const entries = data.feed.entry;
                    const markers = [];

                    entries.forEach(entry => {
                        const lat = parseFloat(entry['gsx$latitude'].$t);
                        const lng = parseFloat(entry['gsx$longitude'].$t);
                        const name = entry['gsx$location'].$t;
                        const youtubeURL = entry['gsx$youtubelink'].$t;

                        // 마커 생성
                        const marker = new google.maps.Marker({
                            position: { lat, lng },
                            title: name,
                            map: map
                        });

                        // 유튜브 영상이 포함된 큰 정보창 설정
                        const infoWindow = new google.maps.InfoWindow({
                            content: `
                                <div class="info-window">
                                    <h3>${name}</h3>
                                    <iframe width="100%" height="250" src="${youtubeURL}?autoplay=1&mute=1" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                                </div>
                            `
                        });

                        marker.addListener("click", () => {
                            infoWindow.open(map, marker);
                        });

                        markers.push(marker);
                    });

                    new MarkerClusterer({ markers, map });
                })
                .catch(error => console.error("Error fetching Google Sheets data:", error));
        }

        // 페이지 로드 시 initMap 실행
        window.onload = initMap;
    </script>
</body>
</html>
