    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI&callback=initMap" async defer></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        #map {
            height: 600px;
            width: 100%;
        }
        #map-container {
            display: flex;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }
        /* PC 환경에서 지도와 안내창 설정 */
        @media (min-width: 769px) {
            #map {
                width: 60%; /* 지도 폭 60% */
                height: 600px; /* 고정된 지도 높이 */
            }
            .info-panel {
                width: 40%; /* 안내창 폭 40% */
                height: 600px; /* 지도와 동일한 높이 */
