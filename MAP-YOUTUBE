<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>여행지 및 식당 안내</title>
    <link rel="stylesheet" href="styles.css"> <!-- 필요에 따라 추가 스타일링을 위해 CSS 파일을 링크합니다. -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAjMNd7u5X5jetqbFXJEr-hF-Ku8_oReGI&callback=initMap" async defer></script> <!-- 구글 맵 API 키를 넣으세요 -->
    <style>
        /* 간단한 스타일링 추가 */
        body {
            font-family: Arial, sans-serif;
        }
        #map {
            height: 600px;
            width: 100%;
        }
        .popup {
            display: none;
            position: absolute;
            background: white;
            border: 1px solid black;
            padding: 10px;
            z-index: 100;
        }
        #locationButton {
            margin: 10px;
            padding: 10px;
        }
    </style>
</head>
<body>

    <h1>여행지 및 식당 안내</h1>
    <button id="locationButton">현재 위치 보기</button>
    <div id="map"></div>
    <div class="popup" id="popup"></div>

    <script>
        let map;
        let marker;
        let userMarker;
        const visibilityZoomLevel = 16; // 핀이 보일 최소 확대 수준 (더 높은 수준으로 조정)

        function initMap() {
            // 맵 초기화
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 12.7882166, lng: 101.135258 }, // 라용 중심
                zoom: 10,
            });

            // 마커를 추가할 위치 (여행지 또는 식당)
            const locations = [
                { title: "맛집 B", lat: 12.7877172, lng: 101.1345031, videoId: "a1BcD2EfGHQ" }

            ];

            // 위치에 대한 마커 생성 및 확대 수준에 따른 마커 표시
            locations.forEach(location => {
                const marker = new google.maps.Marker({
                    position: { lat: location.lat, lng: location.lng },
                    map: map,
                    title: location.title,
                });

                // 클릭 이벤트 리스너 추가
                marker.addListener("click", () => {
                    showPopup(location.title, location.videoId, marker.getPosition());
                });

                // 지도 확대/축소 이벤트 감지 및 마커 표시/숨기기
                map.addListener('zoom_changed', function() {
                    marker.setMap(map.getZoom() >= visibilityZoomLevel ? map : null);
                });
            });
        }

        // 현재 위치 찾기 함수
        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(position => {
                    const pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude,
                    };
                    setUserMarker(pos);
                    map.setCenter(pos);
                    map.setZoom(15); // 현재 위치로 이동 시 확대 수준 설정
                }, () => {
                    handleLocationError(true);
                });
            } else {
                handleLocationError(false);
            }
        }

        // 유저의 현재 위치에 마커 추가 함수
        function setUserMarker(position) {
            if (userMarker) {
                userMarker.setMap(null); // 기존 핀 제거
            }
            userMarker = new google.maps.Marker({
                position: position,
                map: map,
                title: "현재 위치",
                icon: {
                    url: "http://maps.google.com/mapfiles/ms/icons/blue-dot.png" // 사용자 위치를 나타내는 파란색 아이콘
                }
            });
        }

        // 팝업 표시 함수
        function showPopup(title, videoId, position) {
            const popup = document.getElementById("popup");
            const videoLink = `https://www.youtube.com/embed/${videoId}`;
            popup.innerHTML = `
                <h3>${title}</h3>
                <iframe width="280" height="157" 
                        src="${videoLink}" 
                        frameborder="0" 
                        allowfullscreen></iframe>
            `;
            popup.style.display = 'block';
            popup.style.left = position.lng() + 'px';  // Popup 위치 설정
            popup.style.top = position.lat() + 'px';
        }

        // 에러 처리 함수
        function handleLocationError(browserHasGeolocation) {
            const infoWindow = new google.maps.InfoWindow();
            infoWindow.setPosition(map.getCenter());
            infoWindow.setContent(browserHasGeolocation ? 
                                   "Error: The Geolocation service failed." : 
                                   "Error: Your browser doesn't support geolocation.");
            infoWindow.open(map);
        }

        // 버튼 클릭 시 현재 위치 보기
        document.getElementById("locationButton").addEventListener("click", getLocation);
        window.onload = initMap; // 페이지 로드 시 맵 초기화
    </script>
</body>
</html>
