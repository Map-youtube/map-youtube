<body>

    <h1>여행지 및 식당 안내</h1>
    <button id="locationButton">현재 위치 보기</button>

    <div id="map-container">
        <div id="map"></div>
        <div class="info-panel" id="infoBox">
            안내 정보가 여기에 표시됩니다.
        </div>
    </div>

    <script>
        let map;
        let userMarker;
        let userCircle;
        const visibilityZoomLevel = 16; // 핀이 보일 최소 확대 수준 (더 높은 수준으로 조정)

        function initMap() {
            // 맵 초기화
            map = new google.maps.Map(document.getElementById("map"), {
                center: { lat: 12.7882166, lng: 101.135258 }, // 라용 중심
                zoom: 10,
            });

            // 마커를 추가할 위치 (여행지 또는 식당)
            const locations = [
                { title: "맛집 G", lat: 12.7874027, lng: 101.135227, videoId: "a1BcD2EfGHQ" }
            ];

            // 위치에 대한 마커 생성 및 확대 수준에 따른 마커 표시
            locations.forEach(location => {
                const marker = new google.maps.Marker({
                    position: { lat: location.lat, lng: location.lng },
                    map: map,
                    title: location.title,
                });

                // 클릭 이벤트 리스너 추가
                marker.addListener("click", () => {
                    showInfoBox(location.title, location.videoId);
                    map.setCenter(marker.getPosition()); // 핀 클릭 시 지도 중심 이동
                });
            });
        }

        // 안내 정보를 표시하는 함수
        function showInfoBox(title, videoId) {
            const infoBox = document.getElementById("infoBox");
            const videoLink = `https://www.youtube.com/embed/${videoId}`;
            infoBox.innerHTML = `
                <h3>${title}</h3>
                <iframe width="280" height="157" src="${videoLink}" frameborder="0" allowfullscreen></iframe>
            `;
        }

        window.onload = initMap; // 페이지 로드 시 맵 초기화
    </script>
</body>
